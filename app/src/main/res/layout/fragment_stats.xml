<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/fragment_container">

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout1">

        <TextView
            android:id="@+id/azimuthTitleTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Azimuth angle"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/azimuthTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_below="@+id/layout1">

        <TextView
            android:id="@+id/rollTitleTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Roll angle"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/rollTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout3"
        android:layout_below="@+id/layout2">

        <TextView
            android:id="@+id/pitchTitleTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Pitch angle"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/pitchTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout4"
        android:layout_below="@+id/layout3">

        <TextView
            android:id="@+id/timeElpsTitleTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Time Elapsed"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/timeElpsTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout5"
        android:layout_below="@+id/layout4">

        <TextView
            android:id="@+id/pointsCountTitleTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="Number of Points Collected"
            android:layout_weight="1.0" />

        <TextView
            android:id="@+id/pointsCountTxt"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />

    </LinearLayout>

</RelativeLayout>